<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/Status"
    />

    <EditText
        android:id="@+id/editText"
        android:layout_width="fill_parent" android:layout_height="0dp"
        android:layout_weight="1" android:gravity="top|left"
        android:maxLength="140"
        android:hint="@string/Text" />

    <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="100" android:layout_height="50"
                android:text="@string/Update" android:textSize="20sp"

                />

        <TextView
                android:layout_width="fill_parent"  android:layout_height="wrap_content"
                android:layout_margin="10dp" android:gravity="right"
                android:text="@string/charactersCount" android:textSize="20sp"
                android:textColor="@color/"/>


    </TableRow>
</LinearLayout>

